<p id="notice"><%= notice %></p>

<h1>Listing Games</h1>

<br>

<%= form_tag(games_path, method: "get") do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<br>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= sort_link @search, :home, "Home" %></th>
      <th><%= sort_link @search, :guest, "Guest" %></th>
      <th><%= sort_link @search, :points_home, "Points home" %></th>
      <th><%= sort_link @search, :points_guest, "Points guest" %></th>
      <th><%= sort_link @search, :league, "Liga" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.home %></td>
        <td><%= game.guest %></td>
        <td><%= game.points_home %></td>
        <td><%= game.points_guest %></td>
        <td><%= game.league.name %></td>
        <td><%= link_to 'Show', game, class: 'btn btn-primary btn-xs'%></td>
        <td><%= link_to 'Edit', edit_game_path(game), class: 'btn btn-info btn-xs' %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game', new_game_path %>
