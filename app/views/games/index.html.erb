<p id="notice"><%= notice %></p>

<h1>Listing Games</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Home</th>
      <th>Guest</th>
      <th>Points home</th>
      <th>Points guest</th>
      <th>Liga</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.home %></td>
        <td><%= game.guest %></td>
        <td><%= game.points_home %></td>
        <td><%= game.points_guest %></td>
        <td><%= game.league.name %></td>
        <td><%= link_to 'Show', game, class: 'btn btn-primary btn-xs'%></td>
        <td><%= link_to 'Edit', edit_game_path(game), class: 'btn btn-info btn-xs' %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

