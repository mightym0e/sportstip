<p id="notice"><%= notice %></p>

<h1>Listing Tipgroups</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Owner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tipgroups.each do |tipgroup| %>
      <tr>
        <td><%= tipgroup.name %></td>
        <td><%= tipgroup.owner %></td>
        <td><%= link_to 'Show', tipgroup, class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Edit', edit_tipgroup_path(tipgroup), class: 'btn btn-info btn-xs' %></td>
        <td><%= link_to 'Destroy', tipgroup, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

