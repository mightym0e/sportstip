<h1>Log In</h1>

<%= form_tag sessions_path, :html => {:class => "form-horizontal"} do %>

<div class="field form-group">
	<%= label_tag 'E-Mail', nil, class: 'col-sm-5 control-label' %><br>
    <div class='col-sm-5'>
	<%= text_field_tag 'email', nil, class: 'form-control' %>
  </div>
</div>
<div class='field form-group'>
    	<%= label_tag 'Password', nil, class: 'col-sm-5 control-label' %><br>
    <div class='col-sm-5'>
	<%= password_field_tag 'password', nil, class: 'form-control' %>
  </div>
</div>
  <div class='form-group actions'>
    <div class='col-sm-12'>
    <%= submit_tag 'Log In' , :class => 'btn-primary btn-sm' %>
    </div>
  </div>
<% end %>
