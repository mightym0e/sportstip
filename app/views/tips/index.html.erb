<p id="notice"><%= notice %></p>

<h1>Listing Tips</h1>

<table>
  <thead>
    <tr>
      <th>Points home</th>
      <th>Points guest</th>
      <th>User</th>
      <th>Game</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tips.each do |tip| %>
      <tr>
        <td><%= tip.points_home %></td>
        <td><%= tip.points_guest %></td>
        <td><%= tip.user.username %></td>
        <td><%= tip.game.game_description %></td>
        <td><%= link_to 'Show', tip %></td>
        <td><%= link_to 'Edit', edit_tip_path(tip) %></td>
        <td><%= link_to 'Destroy', tip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tip', new_tip_path %>
