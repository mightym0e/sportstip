<%= form_for @tip, :html => {:class => "form-horizontal"} do |f| %>
  <% if @tip.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tip.errors.count, "error") %> prohibited this tip from being saved:</h2>

      <ul>
      <% @tip.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :points_home, :class => "col-sm-2 control-label" %><br>
	<div class="col-sm-5">
    <%= f.number_field :points_home %>
	</div>
  </div>
  <div class="field form-group">
    <%= f.label :points_guest, :class => "col-sm-2 control-label" %><br>
	<div class="col-sm-5">
    <%= f.number_field :points_guest %>
	</div>
  </div>
  <div class="field form-group">
    <%= f.label :user_id, :class => "col-sm-2 control-label" %><br />
	<div class="col-sm-5">
    <%= f.select :user_id, options_from_collection_for_select(User.all, :id, :username, @tip.user_id) %>
	</div>
  </div>
  <div class="field form-group">
    <%= f.label :game_id, :class => "col-sm-2 control-label" %><br />
	<div class="col-sm-5">
    <%= f.select :game_id, options_from_collection_for_select(Game.all, :id, :game_description, @tip.game_id) %>
	</div>
  </div>
  <div class="actions form-group">
    	<div class="col-sm-12">
    	<%= f.submit 'Save', :class => "btn-primary btn-sm" %>
  	</div>
  </div>
<% end %>
