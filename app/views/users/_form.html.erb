<%= form_for @user, :html => {:class => "form-horizontal"} do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :username, :class => "col-sm-2 control-label" %><br>
    <div class="col-sm-5">
    <%= f.text_area :username, :class => "form-control" %>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :email, :class => "col-sm-2 control-label" %><br>
    <div class="col-sm-5">
    <%= f.text_area :email, :class => "form-control" %>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :isadmin, :class => "col-sm-2 control-label" %><br>
    <div class="col-sm-5">
    <%= f.check_box :isadmin, :class => "form-control" %>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :password, :class => "col-sm-2 control-label" %><br>
    <div class="col-sm-5">
    <%= f.text_area :password, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group actions">
    <div class="col-sm-12">
      <%= f.submit 'Update User', :class => "btn-primary btn-sm" %>
    </div>
  </div>
<% end %>
