<p id="notice"><%= notice %></p>

<h1>Listing Leagues</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Sport</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leagues.each do |league| %>
      <tr>
        <td><%= league.name %></td>
        <td><%= league.sport %></td>
        <td><%= link_to 'Show', league, class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Edit', edit_league_path(league), class: 'btn btn-info btn-xs'  %></td>
        <td><%= link_to 'Destroy', league, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

